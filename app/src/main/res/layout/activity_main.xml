<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/welcome_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Napata Library"
        android:textColor="#F00"
        android:padding="10dp"
        android:textAppearance="?android:textAppearanceLarge" />

    <TextView
        android:id="@+id/read_inq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_txt"
        android:text="Have you read any latest books?"
        android:padding="15dp"
        android:textAppearance="?android:textAppearanceMedium" />

    <Button
        android:id="@+id/yes_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/read_inq"
        android:paddingLeft="15dp"
        android:paddingBottom="10dp"
        android:text="Yes" />

    <Button
        android:id="@+id/no_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/read_inq"
        android:layout_toRightOf="@id/yes_button"
        android:paddingBottom="10dp"
        android:text="No" />

    <ImageView
        android:id="@+id/dry_img"
        android:layout_width="90dp"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:layout_below="@id/yes_button"
        android:paddingLeft="15dp"
        android:src="@drawable/dry" />

    <TextView
        android:id="@+id/bk_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/yes_button"
        android:layout_toRightOf="@id/dry_img"
        android:text="A Very Dry Place"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textAppearance="?android:textAppearanceMedium" />
    <TextView
        android:id="@+id/auth1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/dry_img"
        android:layout_below="@id/bk_title"
        android:paddingLeft="10dp"
        android:text="By D.E. Mourn"
        android:textAppearance="?android:textAppearanceSmall" />
    <Button
        android:id="@+id/free_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dry_img"
        android:text="Free Sample " />

    <Button
        android:id="@+id/rev_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dry_img"
        android:layout_toRightOf="@id/free_button1"
        android:text="Review" />

    <ImageView
        android:id="@+id/sunset_img"
        android:layout_width="90dp"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:layout_below="@id/free_button1"
        android:src="@drawable/sunset" />

    <TextView
        android:id="@+id/bk_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/free_button1"
        android:layout_toRightOf="@id/sunset_img"
        android:paddingLeft="10dp"
        android:text="A Sunset on deep waters"
        android:textAppearance="?android:textAppearanceMedium" />
    <TextView
        android:id="@+id/auth2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/sunset_img"
        android:paddingLeft="10dp"
        android:layout_below="@id/bk_title2"
        android:text="By F.E Isherman"
        android:textAppearance="?android:textAppearanceSmall" />
    <Button
        android:id="@+id/free_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sunset_img"
        android:text="Free Sample " />

    <Button
        android:id="@+id/rev_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sunset_img"
        android:layout_toRightOf="@id/free_button2"
        android:text="Review" />

</RelativeLayout>